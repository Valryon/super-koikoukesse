@model SuperKoikoukesse.Webservice.ViewModels.PlayersModel
<h2>Liste des joueurs</h2>

<table class="table table-bordered table-condensed">
    <tr>
        <th>Id
        </th>
        <th>Pseudo
        </th>
        <th>Date de création
        </th>
        <th>Type d'abonnement
        </th>
        <th>Crédits
        </th>
        <th>Coins
        </th>
        <th colspan="3">Actions
        </th>
    </tr>

    @foreach (var player in Model.Players)
    {
        <tr>
            <td>
                @player.Id
            </td>
            <td>
                @player.NickName
            </td>
            <td>
                @player.CreationDate
            </td>
            <td>
                @player.SubscriptionType
            </td>
            <td>
                @player.Credits
            </td>
            <td>
                @player.Coins
            </td>
            <td><a href="@Url.Action("AddCredits", "Players", new { id = player.Id.ToString(), credits = 5 })"><i class="icon-heart"></i></a></td>
            <td><a href="@Url.Action("AddCoins", "Players", new { id = player.Id.ToString(), coins = 1000 })"><i class="icon-plus"></i></a></td>
            <td><a href="@Url.Action("Delete", "Players", new { id = player.Id.ToString() })"><i class="icon-remove-circle"></i></a></td>
        </tr>
    }
</table>
