<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/jquery.1.9.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")" type="text/javascript"></script>
</head>

<body>

    @if (User.Identity.IsAuthenticated == false)
    {
        <div class="container-fluid">
            <div class="row-fluid">
                @RenderBody()
            </div>
            <div class="row-fluid">
                <p>
                    @Html.ActionLink("Connexion", "LogOn", "Home")
                </p>
                <p>
                    Copyright Pixelnest Studio et Laurent Brossard.
                </p>

            </div>
        </div>
    }
    else
    {
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="brand" href="@Url.Action("Index", "Home")">SuperKoiKouKesse</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li><a href="@Url.Action("Index", "Home")">Home</a> </li>
                            <li><a href="@Url.Action("Index", "GameDatabase")">Game DB</a> </li>
                            <li><a href="@Url.Action("Index", "Players")">Players</a> </li>
                            <li><a href="@Url.Action("Index", "Stats")">Stats</a> </li>
                            <li><a href="@Url.Action("Index", "Service")">WS</a> </li>
                        </ul>
                        <p class="navbar-text pull-right">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <span><strong>@User.Identity.Name</strong> @Html.ActionLink("Déconnexion", "LogOff", "Home")
                                </span>
                            }
                            else
                            {
                                <span>
                                    @Html.ActionLink("Connexion", "LogOn", "Home")
                                </span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">

            <div class="row-fluid">

                @if (IsSectionDefined("Sidebar"))
                {
                    <div class="span3 well">
                        RenderSection("Sidebar");
                    </div>
                }
                <div class="span9">
                    @RenderBody()
                </div>
            </div>
        </div>
    }
</body>
</html>
